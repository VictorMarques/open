<%= semantic_form_for @cliente do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :label => "Nome" %>
    <%= f.input :endereco %>
    <%= f.input :born_on, :label => "Data de nascimento", :start_year => 1900 %>
    <%= f.input :female, :as => :radio, :label => "Sexo", :collection => [["Masculino", false], ["Feminino", true]] %>
  <% end %>
   <%= f.button%>
<% end %>
